local -i i;local -i j;local c;for((;$#>0;))do j="${#1}";[[ j -le ${CAP:-256} ]]&&{ for((i=${OFS:-0};i<j;i++))do c="${1:i:1}";if [[ i -lt $((${#WRD[@]}-1)) ]];then [[ ${WRD[i+1]} == *$c* ]]||WRD[i+1]="${WRD[i+1]}$c";else WRD+=("$c");fi;done;};shift;done;i=0;j="${#WRD}";[[ j -gt 0 ]]&&{ for((;i<j;i++))do [[ ${WRD[i+1]} != *${WRD:i:1}* ]]&&return;done;((i--));};local -i k="${#CHS[@]}";for((;${#WRD[i+1]}>=k;i++))do [[ i -eq j ]]&&WRD="$WRD${CHS[k-1]}";done;j=0;for((;j<k;j++))do c="${CHS[j]}";[[ ${WRD[i+1]} == *$c* ]]||{ WRD="${WRD:0:i}$c${WRD:i+1}";return;};done;WRD="$WRD$CHS"
